{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/schemas/sidwave.schema.json",
  "title": "SIDWAVE Composition Schema",
  "type": "object",
  "required": ["sidwave", "title", "tempo", "mode", "voices", "timeline"],
  "properties": {
    "sidwave": { "type": ["number", "string"], "enum": [1, "1.0", "1"] },
    "title": { "type": "string" },
    "author": { "type": "string" },
    "tempo": { "type": "number", "minimum": 30, "maximum": 220 },
    "mode": { "type": "string", "enum": ["PAL", "NTSC"] },
    "global_fx": { "type": "object", "additionalProperties": true },
    "voices": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id"],
        "properties": {
          "id": { "type": "number", "minimum": 1, "maximum": 3 },
          "name": { "type": "string" },
          "waveform": { "type": "string", "enum": ["pulse", "sawtooth", "triangle", "noise", "saw", "tri"] },
          "pulse_width": { "type": "number", "minimum": 0 },
          "adsr": { "type": "array", "items": { "type": "number", "minimum": 0, "maximum": 15 }, "minItems": 4, "maxItems": 4 },
          "patterns": {
            "type": "object",
            "additionalProperties": {
              "oneOf": [
                { "type": "object", "required": ["type", "notes"], "properties": {
                  "type": { "const": "arpeggio" },
                  "notes": { "type": "array", "items": { "type": "string" }, "minItems": 1 },
                  "frame_rate": { "type": "number", "minimum": 1 },
                  "fx": { "type": "object", "additionalProperties": true }
                }, "additionalProperties": false },
                { "type": "object", "properties": {
                  "length": { "type": "number", "minimum": 1 },
                  "motif": { "type": "string" },
                  "transpositions": { "type": "array", "items": { "type": "number" } },
                  "fx": { "type": "object", "additionalProperties": true }
                }, "additionalProperties": false },
                { "type": "object", "required": ["groove"], "properties": {
                  "groove": { "type": "array", "items": { "type": "string" }, "minItems": 1 },
                  "fx": { "type": "object", "additionalProperties": true }
                }, "additionalProperties": false }
              ]
            }
          }
        },
        "additionalProperties": true
      }
    },
    "timeline": {
      "type": "array",
      "minItems": 1,
      "items": { "type": "object", "required": ["bars", "layers"], "properties": {
        "section": { "type": "string" },
        "bars": { "type": "number", "minimum": 1 },
        "layers": { "type": "object", "additionalProperties": { "type": "string" } }
      }, "additionalProperties": false }
    }
  },
  "additionalProperties": false
}
