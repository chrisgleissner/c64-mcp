{
  "name": "c64-mcp",
  "version": "0.1.0",
  "description": "Local MCP server for controlling a Commodore 64 via Ultimate 64 REST API",
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "start": "node --loader ts-node/esm src/index.ts",
    "build": "tsc --noEmit",
    "test": "node scripts/run-tests.mjs",
    "check": "npm run build && npm test",
    "api:generate": "swagger-typescript-api -p doc/ultimate64-openapi.yaml -o generated/ultimate64 -n index.ts --axios --single-http-client --module-name-first-tag",
    "c64:tool": "bash scripts/c64-tool.sh"
  },
  "keywords": [
    "c64",
    "commodore-64",
    "ultimate-64",
    "commodore-64-ultimate",
    "mcp-server",
    "mcp"
  ],
  "author": "Christian Gleissner",
  "license": "GPL-2.0-only",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "axios": "^1.7.7",
    "fastify": "^4.28.1"
  },
  "devDependencies": {
    "@types/node": "^20.12.12",
    "swagger-typescript-api": "^12.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  }
}
