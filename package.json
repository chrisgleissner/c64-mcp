{
  "name": "c64bridge",
  "version": "0.7.3",
  "description": "Local MCP server for controlling a Commodore 64 via Ultimate 64 REST API",
  "type": "module",
  "main": "dist/index.js",
  "packageManager": "bun@1.3.1",
  "imports": {
    "#test/assert": "./test/helpers/assert.js",
    "#test/runner": "./test/helpers/test.js"
  },
  "bin": {
    "c64bridge": "scripts/cli.js"
  },
  "scripts": {
    "start": "node scripts/start.mjs",
    "mcp": "node scripts/invoke-bun.mjs src/mcp-server.ts",
    "mcp:node": "node dist/mcp-server.js",
    "mcp:build": "npm run build && node dist/mcp-server.js",
    "build": "node scripts/prebuild.mjs && tsc -p tsconfig.json && node scripts/postbuild.mjs && node scripts/invoke-bun.mjs scripts/update-readme.ts",
    "lint": "npm run check",
    "test": "node scripts/invoke-bun.mjs scripts/run-tests.ts",
    "test:node": "node scripts/run-tests.mjs",
    "coverage": "node scripts/invoke-bun.mjs scripts/run-tests.ts --coverage",
    "check:package": "node scripts/check-package.mjs",
    "check:run-local": "bash scripts/run-mcp-check.sh local 5",
    "check:run-npm": "bash scripts/run-mcp-check.sh npm 5",
    "check": "npm run build && npm test",
    "check:node-compat": "node scripts/check-node-compat.mjs",
    "build:rag": "node scripts/invoke-bun.mjs scripts/rag-rebuild.mjs",
    "api:generate": "npx --yes swagger-typescript-api@12.0.4 -p doc/c64u/c64-openapi.yaml -o generated/c64 -n index.ts --axios --single-http-client --module-name-first-tag",
    "c64:tool": "bash scripts/c64-tool.sh",
    "rag:rebuild": "node scripts/invoke-bun.mjs scripts/rag-rebuild.mjs",
    "rag:fetch": "node scripts/fetch-external-sources.mjs",
    "rag:discover": "node scripts/invoke-bun.mjs src/rag/discover.ts",
    "changelog:generate": "node scripts/generate-changelog.mjs",
    "release:prepare": "node scripts/prepare-release.mjs",
    "compare:rest": "node scripts/compare-rest-apis.mjs",
    "vice:smoke": "node scripts/invoke-bun.mjs test/vice/viceSmokeTest.ts"
  },
  "keywords": [
    "mcp",
    "mcp-server",
    "model-context-protocol",
    "c64",
    "commodore-64",
    "commodore-64-ultimate",
    "ultimate-64",
    "retro-computing",
    "llm"
  ],
  "author": "Christian Gleissner",
  "license": "GPL-2.0-only",
  "engines": {
    "node": ">=24"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.20.2",
    "axios": "^1.7.7",
    "fastify": "^5.6.1",
    "date-fns": "^4.1.0",
    "meyda": "^5.6.2",
    "octokit": "^5.0.4",
    "pitchfinder": "^2.2.0",
    "reflect-metadata": "^0.2.2",
    "yaml": "^2.6.0"
  },
  "optionalDependencies": {
    "naudiodon": "^2.3.6"
  },
  "devDependencies": {
    "@types/node": "^24.9.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  },
  "files": [
    "mcp.json",
    "AGENTS.md",
    "LICENSE",
    "README.md",
    "dist/**",
    "data/**",
    "doc/**",
    "scripts/**",
    "generated/**/*.js",
    ".github/prompts/**"
  ],
  "prepack": "npm run build"
}
